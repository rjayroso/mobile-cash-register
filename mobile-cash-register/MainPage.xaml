    <StackLayout Orientation="Vertical" BackgroundColor="WhiteSmoke">
        <Label
            Margin="20"
            Text="Type"
            FontSize="Large" 
            BackgroundColor="WhiteSmoke"/>
        
        <Grid BackgroundColor="WhiteSmoke" HorizontalOptions="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="75"/>
                <RowDefinition Height="75"/>
                <RowDefinition Height="75"/>
                <RowDefinition Height="75"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="75"/>
                <ColumnDefinition Width="75"/>
                <ColumnDefinition Width="75"/>
                <ColumnDefinition Width="75"/>
            </Grid.ColumnDefinitions>
            <!-- 1st row -->
            <Button 
                Grid.Row="1" 
                Grid.Column="0"
                Text="7" 
                FontSize="Large" 
                BackgroundColor="white"
                BorderRadius="20"/>
            <Button 
                Grid.Row="1" 
                Grid.Column="1" 
                Text="8" 
                FontSize="Large" 
                BackgroundColor="white"
                BorderRadius="20"/>
            <Button 
                Grid.Row="1" 
                Grid.Column="2" 
                Text="9" 
                FontSize="Large" 
                BackgroundColor="white"
                BorderRadius="20"/>
            <Label 
                Grid.Row="1" 
                Grid.Column="3" 
                Text="Total" 
                FontSize="Large" 
                HorizontalTextAlignment="Center"
                BackgroundColor="WhiteSmoke"/>
            <!-- 2nd row -->
            <Button 
                Grid.Row="2" 
                Grid.Column="0" 
                Text="4" 
                FontSize="Large" 
                BackgroundColor="white"
                BorderRadius="20"/>
            <Button 
                Grid.Row="2" 
                Grid.Column="1" 
                Text="5" 
                FontSize="Large" 
                BackgroundColor="white"
                BorderRadius="20"/>
            <Button 
                Grid.Row="2" 
                Grid.Column="2" 
                Text="6" 
                FontSize="Large" 
                BackgroundColor="white"
                BorderRadius="20"/>
            <Button 
                Grid.Row="2" 
                Grid.Column="3" 
                Grid.RowSpan="2" 
                Text="Buy" 
                FontSize="Large" 
                TextColor="White"
                BackgroundColor="Blue"
                BorderRadius="20"/>
            <!-- 3rd row -->
            <Button 
                Grid.Row="3" 
                Grid.Column="0" 
                Text="1" 
                FontSize="Large"
                BackgroundColor="white" 
                BorderRadius="20"/>
            <Button 
                Grid.Row="3" 
                Grid.Column="1" 
                Text="2" 
                FontSize="Large"
                BackgroundColor="white" 
                BorderRadius="20"/>
            <Button 
                Grid.Row="3" 
                Grid.Column="2" 
                Text="3"
                FontSize="Large"
                BackgroundColor="white" 
                BorderRadius="20"/>
            <!-- 4th row -->
            <Button 
                Grid.Row="4" 
                Grid.Column="1" 
                Text="0" 
                FontSize="Large"
                BackgroundColor="white" 
                BorderRadius="20"/>
        </Grid>

        <Label
            Margin="20"
            Text="Quantity"
            FontSize="Large" 
            BackgroundColor="WhiteSmoke"/>

        <Grid BackgroundColor="WhiteSmoke">
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
        </Grid>

    </StackLayout>
</ContentPage>
